        #order-form.modal
            .modal-content
                form.row.ajax-form(method="POST" action="/order-form")
                    != csrf_field()
                    if isset($errors) && $errors->any()
                        .errors.card.red.white-text
                            .card-content
                                each error in $errors->all()
                                    .error= $error
                    .input-field.col.l4.s12
                        input#name(name="name" type="text" value=old('name'))
                        label(for="name") Имя*
                    .input-field.col.l4.s12
                        input#second-name(name="second_name" type="text" value=old('second_name'))
                        label(for="second-name") Отчество
                    .input-field.col.l4.s12
                        input#last-name(name="last_name" type="text" value=old('last_name'))
                        label(for="last-name") Фамилия
                    .input-field.col.l4.s12
                        input#phone(name="phone" type="text" value=old('phone'))
                        label(for="phone") Номер телефона*
                    .input-field.col.l4.s12
                        input#city(name="city" type="text" value=old('city'))
                        label(for="city") Город*
                    .input-field.col.l4.s12
                        input#email(name="email" type="text" value=old('email'))
                        label(for="email") E-Mail
                    .input-field.col.s12
                        input#skype(name="skype" type="text" value=old('skype'))
                        label(for="skype") Skype
                    //.clearfix.center-align
                     //   .g-recaptcha(data-sitekey="6LeVQDIUAAAAAPwLSpa9psmjIZ5mPpDW3qn-Sk6p")
                    .row.center
                        input(type="hidden" name="order" value="1")
                        button.btn.waves-effect.waves-light.blue(type="submit") Отправить
        #questioncontact-form.modal
            .modal-content
                form.row.ajax-form(method="POST" action="/contact-form")
                    != csrf_field()
                    if isset($errors) && $errors->any()
                        .errors.card.red.white-text
                            .card-content
                                each error in $errors->all()
                                    .error= $error
                    .input-field.col.s12
                        input#c_name(name="name" type="text" value=old('name'))
                        label(for="c_name") Имя*
                    .input-field.col.s12
                        input#c_contacts(name="contacts" type="text" value=old('contacts'))
                        label(for="c_contacts") Контакты
                    .input-field.col.s12
                        input#c_email(name="email" type="text" value=old('email'))
                        label(for="c_email") E-Mail
                    .input-field.col.s12
                        input#c_phone(name="phone" type="text" value=old('phone'))
                        label(for="c_phone") Номер телефона*
                    .input-field.col.s12
                        textarea#question(name="question" type="text" value=old('question') style="border: unset; border-bottom: 1px solid #9e9e9e; max-width: 100%; min-width: 100%; min-height: 75px; max-height: 200px; outline:none;")
                        label(for="question") Вопрос
